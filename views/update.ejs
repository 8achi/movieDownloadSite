<%- include("partials/uploadHeader"); -%>


  <form class="" action="/update" method="post">


    <div class="upload-container" style="background-color: #711A75;">
      <div class="container">
        <div class="row">
          <div class="col">
            <h1>Link Section</h1><br>
            <p>DwnldLink 420p:</p>
            <textarea name="downloadLink420p" rows="2" cols="40"><%=movie.downloadLink420p%></textarea>
            <hr>
            <p>DwnldLink 720p:</p>
            <textarea name="downloadLink720p" rows="2" cols="40"><%=movie.downloadLink720p%></textarea>
            <hr>
            <p>DwnldLink 1080p:</p>
            <textarea name="downloadLink1080p" rows="2" cols="40"><%=movie.downloadLink1080p%></textarea>
            <hr>
            <p>PosterImgLink:</p>
            <textarea  name="posterImageLink" rows="2" cols="40"><%=movie.posterImage%></textarea>
            <hr>
            <p>screenshot[1]:</p>
            <textarea name="ss1" rows="2" cols="40"><%=movie.screenshotLink1%></textarea>
            <hr>
            <p>screenshot[2]:</p>
            <textarea name="ss2" rows="2" cols="40"><%=movie.screenshotLink2%></textarea>
            <hr>
            <p>screenshot[3]:</p>
            <textarea name="ss3" rows="2" cols="40"><%=movie.screenshotLink3%></textarea>
            <hr>
          </div>

          <div class="col">
            <h1>Title Section</h1><br>
            <p>MovieName:</p>
            <textarea value="" name="movieName" rows="2" cols="40"><%=movie.movieName%></textarea>
            <hr>
            <p>MovieTitle:</p>
            <textarea name="movieTitle"  rows="2" cols="40"><%=movie.title%></textarea>
            <hr>
            <p>Languages:</p>
            <textarea name="languages"  rows="2" cols="40"><%=movie.language%></textarea>
            <hr>
            <p>Size available:</p>
            <textarea name="size" rows="2" cols="40"><%=movie.size%></textarea>
            <hr>
            <p>Movie Format:</p>
            <textarea name="format" rows="2" cols="40"><%=movie.format%></textarea>
            <hr>
          </div>

          <div class="col">
            <h1>info Section</h1><br>
            <p>IMDb Rating:</p>
            <textarea name="imdb" rows="2" cols="40"><%=movie.imdbRating%></textarea>
            <hr>
            <p>Story Line:</p>
            <textarea name="story" rows="2" cols="40"><%=movie.storyLine%></textarea>
            <hr>
            <p>Director:</p>
            <textarea name="director" rows="2" cols="40"><%=movie.director%></textarea>
            <hr>
            <p>Writer Name:</p>
            <textarea name="writer" rows="2" cols="40"><%=movie.writer%></textarea>
            <hr>
            <p>Stars Cast:</p>
            <textarea name="stars" rows="2" cols="40"><%=movie.stars%></textarea>
            <hr>
            <!-- ////////////////////for getting id/////////////////////// -->
            <input type="hidden" name="id" value="<%=movie._id%>">

          </div>


        </div>
      </div>

      <button class="btn btn-success"type="submit" name="button">Update</button>

    </div>

  </form>
  <%- include("partials/footer"); -%>
